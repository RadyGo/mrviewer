#!/bin/sh

mrv_bundle="`echo "$0" | sed -e 's|/Contents/MacOS/mrViewer||'`"
mrv_resources="$mrv_bundle/Contents/Resources"
mrv_path="$mrv_resources/bin/mrViewer.app/Contents"
mrv_dynlib="$mrv_path/Resources/lib"

echo "running $0"
echo "mrv_bundle = $mrv_bundle"
echo "mrv_resources = $mrv_resources"
echo "mrv_path=$mrv_path"
echo "dynpath=$mrv_dynlib"

export DYLD_FALLBACK_LIBRARY_PATH=$mrv_dynlib

exec "$mrv_path/MacOS/mrViewer" "$@"
